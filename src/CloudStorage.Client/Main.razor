@using System.Reflection

<Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="new Assembly[]{typeof(CloudStorage.Pages.MainLayout).Assembly}">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(CloudStorage.Pages.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(CloudStorage.Pages.MainLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>
