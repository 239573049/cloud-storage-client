@page "/"


<MCard Class="content-list">
    <div class="recent-documents">
        @NewestStorage.Title
    </div>
    <div class="recent-content">
        <div>
            <div style="float: left;width:100px;">
                <MImage MaxWidth="@("100px")"
                        MaxHeight="@("150px")"
                        Src="@NewestStorage.Icon">
                </MImage>
            </div>
            <div class="recent-text">
                <div>
                    @NewestStorage.Message
                </div>
                <div>
                    @NewestStorage?.creationTime
                </div>
            </div>
        </div>
    </div>
</MCard>

