<div>
    @foreach (var d in UploadingList)
    {
        <MCard Class="upload-list">
            <div>@d.FileName</div>
            <MContainer>
                <MProgressLinear Value="@(d.Progress)" Height="25">
                    <strong>@(d.Progress)%</strong>
                </MProgressLinear>
            </MContainer>
        </MCard>
    }
</div>


<style>
    .upload-list {
        transition: .3s;
        margin: 5px;
        padding: 5px;
        border-radius: 10px;
    }

        .upload-list:hover {
            transition: .3s;
            background-color: #FFD700;
        }
</style>