<MList Style="border-radius: 12px;"
       Dense
       Nav>

    <MListItem Link>
        <MListItemIcon>
            <MImage Src="https://token-cloud-storage.oss-cn-shenzhen.aliyuncs.com/icon/rechristen.png" Dark></MImage>
        </MListItemIcon>

        <MListItemContent>
            <MListItemTitle>重命名</MListItemTitle>
        </MListItemContent>
    </MListItem>
    <MDivider></MDivider>
    @if(Storage.Type==StorageType.File)
    {
        <MListItem Link>
            <MListItemIcon>
                <MImage Src="https://token-cloud-storage.oss-cn-shenzhen.aliyuncs.com/icon/download.png" Dark></MImage>
            </MListItemIcon>

            <MListItemContent>
                <MListItemTitle>下载文件</MListItemTitle>
            </MListItemContent>
        </MListItem>
        <MDivider></MDivider>
    }

    <MListItem Link>
        <MListItemIcon>
            <MImage Src="https://token-cloud-storage.oss-cn-shenzhen.aliyuncs.com/icon/particulars.png" Dark></MImage>
        </MListItemIcon>

        <MListItemContent>
            <MListItemTitle>查看详情</MListItemTitle>
        </MListItemContent>
    </MListItem>
    <MDivider></MDivider>

    <MListItem Link OnClick="DeleteFileAsync">
        <MListItemIcon>
            <MImage Src="https://token-cloud-storage.oss-cn-shenzhen.aliyuncs.com/icon/delete.png" Dark></MImage>
        </MListItemIcon>

        <MListItemContent>
            <MListItemTitle>删除文件</MListItemTitle>
        </MListItemContent>
    </MListItem>
    <MDivider></MDivider>
</MList>